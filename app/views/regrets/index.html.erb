<div class="jumbotron">
  <h3>Leave your regrets and wishes for the wedding day</h3>
</div>
<div class="row">
    <% @regrets.each do |regret| %>
      <div class="col-xs-6" style="width: 100%">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= regret.user.name %> said:
          </div>
          <div class="panel-body">
            <%= regret.message[0..50] %>...<%= link_to "Read More", regret %>
          </div>
          <div class="panel-footer">
            <div class="btn-group btn-group-small">
              <% if current_user.id == regret.user.id %>
                <%= link_to 'Edit', edit_regret_path(regret), class: "btn btn-default" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
